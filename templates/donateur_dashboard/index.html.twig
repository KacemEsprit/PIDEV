{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Donateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Tableau de bord Donateur</h1>
    <p class="lead">Bienvenue, {{ app.user.email }}</p>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Mes Dons</h5>
                    <p class="card-text">Gérez vos dons et faites de nouveaux dons</p>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_don_index') }}" class="btn btn-primary">Voir mes dons</a>
                        <a href="{{ path('app_don_new') }}" class="btn btn-success">Nouveau don</a>
                    </div>
                </div>
            </div>

            {% if dons|length > 0 %}
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-3">Derniers dons</h6>
                    <div class="list-group">
                        {% for don in dons|slice(0, 5) %}
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">{{ don.typeDon }}</h6>
                                    <small>{{ don.dateDon|date('d/m/Y') }}</small>
                                </div>
                                <p class="mb-1">
                                    {% if don.montant %}
                                        Montant: {{ don.montant }}TND
                                    {% else %}
                                        Don matériel
                                    {% endif %}
                                </p>
                                <small class="text-muted">Statut: {{ don.statut }}</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        
       
    </div>
</div>
{% endblock %}
