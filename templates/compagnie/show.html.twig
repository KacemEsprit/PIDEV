{% extends 'base.html.twig' %}

{% block title %}Détails de la Compagnie{% endblock %}

{% block body %}
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Créer une nouvelle Compagnie</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb text-uppercase mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Nouveau Compagnie/li>
                </ol>
            </nav>
        </div>
    </div>


      <div class="container-xxl py-5">
    <div class="container mt-4">
        <h1>Détails de la Compagnie</h1>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        {% if compagnie.logo %}
                            <img src="{{ asset('uploads/logos/' ~ compagnie.logo) }}" class="img-fluid" alt="Logo">
                        {% endif %}
                    </div>
                    <div class="col-md-8">
                        <h2>{{ compagnie.nom }}</h2>
                        <p><strong>Email:</strong> {{ compagnie.email }}</p>
                        <p><strong>Téléphone:</strong> {{ compagnie.tel }}</p>
                        <p><strong>Adresse:</strong> {{ compagnie.adresse }}</p>
                        <p><strong>Site Web:</strong> <a href="{{ compagnie.siteWeb }}" target="_blank">{{ compagnie.siteWeb }}</a></p>
                        <p><strong>SIRET:</strong> {{ compagnie.siret }}</p>
                        <p><strong>Statut Juridique:</strong> {{ compagnie.statutJuridique }}</p>
                        <p><strong>Date de création:</strong> {{ compagnie.dateCreation|date('d/m/Y') }}</p>
                        <p><strong>Description:</strong></p>
                        <p>{{ compagnie.description }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_compagnie_edit', {'id': compagnie.id}) }}" class="btn btn-warning">Modifier</a>
            <a href="{{ path('app_compagnie_index') }}" class="btn btn-secondary">Retour à la liste</a>
            {{ include('compagnie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
