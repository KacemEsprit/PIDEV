<canvas id="donationChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
fetch('/don/statistics')
    .then(response => response.json())
    .then(data => {
        const labels = data.map(entry => entry.donation_date);
        const financialData = data.map(entry => entry.total_financial);
        const materialData = data.map(entry => entry.total_material);

        const ctx = document.getElementById('donationChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar', 
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Dons Financiers (€)',
                        data: financialData,
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Dons Matériels (Nombre)',
                        data: materialData,
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>