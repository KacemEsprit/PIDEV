{% extends 'base.html.twig' %}

{% block title %}Nouveau Don{% endblock %}

{% block body %}
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Nouveau don</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb text-uppercase mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Nouveau don</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="container mt-4">
        <h1>Faire un nouveau don</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {% if form.compagnies is defined %}
                        {{ form_row(form.compagnies) }}
                    {% endif %}
                    {{ form_row(form.type_don) }}
                    {{ form_row(form.montant) }}
                    {{ form_row(form.description_materiel) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.mode_paiement) }}
                    {{ form_row(form.preuve_don) }}

                    <!-- Zone de paiement Stripe -->
                    <div id="stripe-payment" style="display: none;">
                        <h5>Entrez les détails de votre carte</h5>
                        <div id="card-element"></div>
                        <div id="card-errors" class="text-danger mt-2"></div>
                        <button id="stripe-pay-button" class="btn btn-success mt-3">Payer avec Stripe</button>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('app_don_index') }}" class="btn btn-secondary">Retour à la liste</a>
        {{ form_end(form) }}
    </div>

    <!-- Intégration Stripe -->
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let stripe = Stripe("{{ stripe_public_key ?? '' }}");
// Remplace avec ta clé publique
            let elements = stripe.elements();
            let card = elements.create("card");
            card.mount("#card-element");

            let modePaiement = document.querySelector("#don_mode_paiement"); // ID du champ mode_paiement
            let stripePaymentDiv = document.getElementById("stripe-payment");
            let stripePayButton = document.getElementById("stripe-pay-button");

            modePaiement.addEventListener("change", function () {
                if (modePaiement.value === "paypal") {
                    stripePaymentDiv.style.display = "block";
                } else {
                    stripePaymentDiv.style.display = "none";
                }
            });

            stripePayButton.addEventListener("click", async function (e) {
                e.preventDefault();
                let response = await fetch("{{ path('donation_pay') }}", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ amount: document.querySelector("#don_montant").value })
                });

                let result = await response.json();
                if (result.error) {
                    document.getElementById("card-errors").textContent = result.error;
                    return;
                }

                let { paymentIntent, error } = await stripe.confirmCardPayment(result.clientSecret, {
                    payment_method: { card: card }
                });

                if (error) {
                    document.getElementById("card-errors").textContent = error.message;
                } else {
                    alert("Paiement réussi !");
                    document.querySelector("form").submit();
                }
            });
        });
    </script>
{% endblock %}

