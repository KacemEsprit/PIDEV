                        {% endif %}
                        <a href="{{ path('app_historique_don') }}" class="dropdown-item">Historique don</a>
                    </div>
                </div>

       {% if is_granted('ROLE_USER') and (is_granted('ROLE_PATIENT') or is_granted('ROLE_MEDECIN') or is_granted('ROLE_ADMIN')) %}
