{% extends 'base_admin.html.twig' %}
{% block title %}Admin - OncoKidsCare{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        window.addEventListener('load', function() {
            try {
                const ctx = document.getElementById('userDistributionChart');
                if (!ctx) {
                    console.error('Canvas element not found');
                    return;
                }

                const data = {
                    labels: ['Admins', 'Médecins', 'Patients', 'Donateurs'],
                    datasets: [{
                        data: [
                            {{ admins|length }},
                            {{ medecins|length }},
                            {{ patients|length }},
                            {{ donateurs|length }}
                        ],
                        backgroundColor: [
                            '#FF6384',
                            '#36A2EB',
                            '#FFCE56',
                            '#4BC0C0'
                        ]
                    }]
                };

                const config = {
                    type: 'pie',
                    data: data,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                                text: 'User Distribution Overview'
                            }
                        }
                    }
                };

                new Chart(ctx, config);
            } catch (error) {
                console.error('Error creating chart:', error);
            }
        });
    </script>
{% endblock %}

{% block body %}
    <!-- Sale & Revenue Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fas fa-hand-holding-heart fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Donateurs</p>
                        <h6 class="mb-0">{{ donateurs|length }}</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fas fa-user-injured fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Patients</p>
                        <h6 class="mb-0">{{ patients|length }}</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fas fa-user-md fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Médecins</p>
                        <h6 class="mb-0">{{ medecins|length }}</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fas fa-user-shield fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Admins</p>
                        <h6 class="mb-0">{{ admins|length }}</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Sale & Revenue End -->

    <!-- Charts Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">User Distribution</h6>
                    </div>
                    <div style="height: 300px;">
                        <canvas id="userDistributionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Charts End -->
{% endblock %}