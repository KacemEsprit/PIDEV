{% extends 'base_admin.html.twig' %}

{% block title %}Nouveau Médicament{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Ajouter un nouveau médicament</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Formulaire d'ajout</h6>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom) }} 
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }} 
    </div>

    <div class="form-group">
        {{ form_label(form.quantite_stock) }}
        {{ form_widget(form.quantite_stock, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.quantite_stock) }} 
    </div>

    <div class="form-group">
        {{ form_label(form.prix) }}
        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.prix) }} 

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="{{ path('app_medicament_index') }}" class="btn btn-secondary">Retour à la liste</a>
{{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}