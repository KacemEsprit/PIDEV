{% extends 'base_admin.html.twig' %}

{% block title %}Modifier Médicament{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Modifier le médicament</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Formulaire de modification</h6>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                    <a href="{{ path('app_medicament_index') }}" class="btn btn-secondary">Retour à la liste</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}