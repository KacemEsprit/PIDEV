{% extends 'base.html.twig' %}

{% block title %}Modifier Compagnie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier la Compagnie</h1>

        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.tel) }}
                    {{ form_row(form.adresse) }}
                    {{ form_row(form.site_web) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.siret) }}
                    {{ form_row(form.statut_juridique) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.logo) }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('app_compagnie_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
        {{ form_end(form) }}

        {{ include('compagnie/_delete_form.html.twig') }}
    </div>
{% endblock %}
