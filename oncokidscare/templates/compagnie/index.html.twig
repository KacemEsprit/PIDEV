{% extends 'base.html.twig' %}

{% block title %}Liste des Compagnies{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Compagnies</h1>

        <a href="{{ path('app_compagnie_new') }}" class="btn btn-primary mb-3">Créer une nouvelle compagnie</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Statut Juridique</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for compagnie in compagnies %}
                <tr>
                    <td>{{ compagnie.nom }}</td>
                    <td>{{ compagnie.email }}</td>
                    <td>{{ compagnie.tel }}</td>
                    <td>{{ compagnie.statutJuridique }}</td>
                    <td>
                        <a href="{{ path('app_compagnie_show', {'id': compagnie.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_compagnie_edit', {'id': compagnie.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune compagnie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
