{% extends 'base.html.twig' %}

{% block title %}Gestion des Compagnies{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        
        /* Style pour le bloc de création */
        .create-block {
            background: linear-gradient(135deg, #6e8efb, #4a6ee0);
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            margin-bottom: 2rem;
            color: white;
            box-shadow: 0 10px 20px rgba(110,142,251,0.2);
        }
        
        .create-block h2 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: white;
        }
        
        .create-block p {
            margin-bottom: 1.5rem;
            opacity: 0.9;
        }
        
        .create-button {
            background: white;
            color: #4a6ee0;
            padding: 1rem 2rem;
            border-radius: 10px;
            display: inline-block;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            border: 2px solid white;
        }
        
        .create-button:hover {
            background: transparent;
            color: white;
            transform: translateY(-2px);
            text-decoration: none;
        }
        
        .create-button i {
            margin-right: 0.5rem;
        }
        
        /* Style pour le bloc de liste */
        .list-block {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }
        
        .list-block h2 {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            color: #2d3748;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e9ecef;
        }
        
        .company-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }
        
        .company-card {
            background: #f8fafc;
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            border: 1px solid #e2e8f0;
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        
        .company-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            border-color: #6e8efb;
        }
        
        .company-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 1rem;
            background: white;
            border-radius: 12px;
            padding: 1rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        }
        
        .company-info {
            text-align: center;
            flex-grow: 1;
        }
        
        .company-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }
        
        .company-details {
            color: #64748b;
            font-size: 0.9rem;
            line-height: 1.6;
        }
        
        .company-details i {
            color: #6e8efb;
            width: 20px;
        }
        
        .select-button {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            margin-top: 1rem;
            background: #6e8efb;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .select-button:hover {
            background: #4a6ee0;
            color: white;
            text-decoration: none;
        }
        
        .no-companies {
            text-align: center;
            padding: 3rem;
            background: #f8fafc;
            border-radius: 12px;
            border: 2px dashed #e2e8f0;
            color: #64748b;
        }
        
        @media (max-width: 768px) {
            .company-grid {
                grid-template-columns: 1fr;
            }
            
            .create-block, .list-block {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-container">
        {# Bloc de création #}
        <div class="create-block">
            <h2>Créer une Nouvelle Compagnie</h2>
            <p>Ajoutez votre entreprise pour commencer à faire des dons</p>
            <a href="{{ path('app_compagnie_new', {'redirect': 'don'}) }}" class="create-button">
                <i class="fas fa-plus-circle"></i>Nouvelle Compagnie
            </a>
        </div>
        
        {# Bloc de liste #}
        <div class="list-block">
            <h2>Compagnies Enregistrées</h2>
            
            {% if compagnies is empty %}
                <div class="no-companies">
                    <p class="mb-0">Aucune compagnie n'est encore enregistrée</p>
                </div>
            {% else %}
                <div class="company-grid">
                    {% for compagnie in compagnies %}
                        <div class="company-card">
                            {% if compagnie.logo %}
                                <img src="{{ asset('uploads/logos/' ~ compagnie.logo) }}" alt="Logo {{ compagnie.nom }}" class="company-logo">
                            {% else %}
                                <div class="company-logo d-flex align-items-center justify-content-center">
                                    <i class="fas fa-building fa-2x text-muted"></i>
                                </div>
                            {% endif %}
                            
                            <div class="company-info">
                                <div class="company-name">{{ compagnie.nom }}</div>
                                <div class="company-details">
                                    <div><i class="fas fa-id-card me-2"></i>SIRET: {{ compagnie.siret }}</div>
                                    {% if compagnie.adresse %}
                                        <div><i class="fas fa-map-marker-alt me-2"></i>{{ compagnie.adresse }}</div>
                                    {% endif %}
                                </div>
                                
                                <a href="{{ path('app_don_new', {'compagnie': compagnie.id}) }}" class="select-button">
                                    <i class="fas fa-check me-2"></i>Sélectionner
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
