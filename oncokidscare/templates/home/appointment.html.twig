{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Rapport d'État</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb text-uppercase mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Rapport d'État</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="container py-5">
        <div class="bg-white p-5 rounded shadow-sm border">
          <h2 class="text-center text-primary mb-4">Rapport Médical</h2>
          <hr>
          <form method="post">
            <!-- Section 1 : Informations Générales -->
            <h4 class="text-secondary">Informations Générales</h4>
            <div class="row mb-3">
              <div class="col-md-4">
                <label class="form-label">Âge</label>
                <input type="number" name="age" class="form-control" placeholder="Ex : 45" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Sexe</label>
                <select name="sexe" class="form-select" required>
                  <option value="">Choisir...</option>
                  <option value="0">Femme</option>
                  <option value="1">Homme</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">Date du Rapport</label>
                <input type="date" name="dateRapport" class="form-control" required>
              </div>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-10">
                <label class="form-label">Patient</label>
                <select name="patient" class="form-select" required>
                  <option value="">Sélectionnez un patient</option>
                 
                </select>
              </div>
            </div>
            
            
            <!-- Section 2 : Signes Vitaux -->
            <h4 class="text-secondary">Signes Vitaux</h4>
            <div class="row mb-3">
              <div class="col-md-3">
                <label class="form-label">Tension artérielle</label>
                <input type="number" name="tensionArterielle" class="form-control" placeholder="Ex : 120" required>
              </div>
              <div class="col-md-3">
                <label class="form-label">Pouls</label>
                <input type="number" name="pouls" class="form-control" placeholder="Ex : 70" required>
              </div>
              <div class="col-md-3">
                <label class="form-label">Température (°C)</label>
                <input type="number" step="0.1" name="temperature" class="form-control" placeholder="Ex : 37.0" required>
              </div>
              <div class="col-md-3">
                <label class="form-label">Saturation oxygène (%)</label>
                <input type="number" name="saturationOxygene" class="form-control" placeholder="Ex : 95" required>
              </div>
            </div>
            
            <!-- Section 3 : Autres Mesures -->
            <h4 class="text-secondary">Autres Mesures</h4>
            <div class="row mb-3">
              <div class="col-md-4">
                <label class="form-label">IMC</label>
                <input type="number" step="0.1" name="imc" class="form-control" placeholder="Ex : 22.5" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Niveau de Douleur</label>
                <input type="number" name="niveauDouleur" class="form-control" placeholder="Ex : 5" required>
              </div>
            </div>
            
            <!-- Section 4 : Détails du Traitement -->
            <h4 class="text-secondary">Détails du Traitement</h4>
            <div class="row mb-3">
                <div class="col-md-4">
                  <label class="form-label">Traitement</label>
                  <select name="traitement" class="form-select" required>
                    <option value="dialyse">Dialyse</option>
                    <option value="reanimation">Réanimation</option>
                    <option value="chimiotherapie">Chimiothérapie</option>
                    <option value="chirurgie">Chirurgie</option>
                  </select>
                </div>
              
              
              <div class="col-md-4">
                <label class="form-label">Dose du Médicament (mg)</label>
                <input type="number" step="0.1" name="doseMedicament" class="form-control" placeholder="Ex : 50" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Fréquence du Traitement</label>
                <select name="frequenceTraitement" class="form-select" required>
                  <option value="quotidien">Quotidien</option>
                  <option value="hebdomadaire">Hebdomadaire</option>
                  <option value="mensuel">Mensuel</option>
                </select>
              </div>
              
            
            <!-- Section 5 : Détails du Processus Médical -->
            <h4 class="text-secondary">Détails du Processus Médical</h4>
            <div class="row mb-3">
              <div class="col-md-4">
                <label class="form-label">Perte de Sang (ml)</label>
                <input type="number" step="0.1" name="perteSang" class="form-control" placeholder="Ex : 200" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Temps d'Opération (min)</label>
                <input type="number" step="0.1" name="tempsOperation" class="form-control" placeholder="Ex : 90" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Durée de Séance (min)</label>
                <input type="number" step="0.1" name="dureeSeance" class="form-control" placeholder="Ex : 30" required>
              </div>
            </div>
            
            <!-- Section 6 : Autres Détails Médicaux -->
            <h4 class="text-secondary">Autres Détails Médicaux</h4>
            <div class="row mb-3">
              <div class="col-md-4">
                <label class="form-label">Filtration du Sang</label>
                <input type="number" step="0.1" name="filtrationSang" class="form-control" placeholder="Ex : 0.0" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Créatinine (mg/dL)</label>
                <input type="number" step="0.01" name="creatinine" class="form-control" placeholder="Ex : 1.2" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Score de Glasgow</label>
                <input type="number" name="scoreGlasgow" class="form-control" placeholder="Ex : 15" required>
              </div>
            </div>
            
            <!-- Section 7 : Respiration Assistée et Complications -->
            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label">Respiration Assistée</label>
                <select name="respirationAssistee" class="form-select" required>
                  <option value="0">Non</option>
                  <option value="1">Oui</option>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">Complications</label>
                <textarea name="complications" class="form-control" rows="3" placeholder="Décrire les complications, le cas échéant..."></textarea>
              </div>
            </div>
            
            <div class="text-center mt-4">
              <button type="submit" class="btn btn-primary px-5">Enregistrer le Rapport</button>
            </div>
          </form>
        </div>
      </div>
      {% endblock %}
    
