{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
    <h1>Mes Commandes</h1>

    <a href="{{ path('app_commande_new') }}" class="btn btn-primary">Nouvelle commande</a>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Médicaments</th>
                <th>Quantité totale</th>
                <th>Montant total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.dateCommande|date('d/m/Y') }}</td>
                <td>
                    {% for ligneCommande in commande.ligneCommandes %}
                        {{ ligneCommande.medicament.nom }} ({{ ligneCommande.quantite }})<br>
                    {% endfor %}
                </td>
                <td>{{ commande.quantiteTotal }}</td>
                <td>{{ commande.montantTotal|number_format(2, ',', ' ') }} €</td>
                <td>{{ commande.status }}</td>
                <td>
                    {% if commande.status == 'en_attente' %}
                        <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <form method="post" action="{{ path('app_commande_delete', {'id': commande.id}) }}" style="display: inline-block">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                            <button class="btn btn-sm btn-danger">Annuler</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %} 