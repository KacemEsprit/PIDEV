{% extends 'base.html.twig' %}

{% block title %}Liste des Dons{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Dons</h1>

        <a href="{{ path('app_don_new') }}" class="btn btn-primary mb-3">Faire un nouveau don</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Montant</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Mode de paiement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for don in dons %}
                <tr>
                    <td>{{ don.typeDon }}</td>
                    <td>{{ don.montant ? don.montant ~ '€' : 'N/A' }}</td>
                    <td>{{ don.dateDon|date('d/m/Y') }}</td>
                    <td>
                        <span class="badge {% if don.statut == 'En attente' %}bg-warning{% elseif don.statut == 'Validé' %}bg-success{% else %}bg-danger{% endif %}">
                            {{ don.statut }}
                        </span>
                    </td>
                    <td>{{ don.modePaiement }}</td>
                    <td>
                        <a href="{{ path('app_don_show', {'id': don.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_don_edit', {'id': don.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun don trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
